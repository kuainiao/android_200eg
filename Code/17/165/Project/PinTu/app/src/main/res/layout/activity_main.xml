<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/ib_00_00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_00x00"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/ib_00_01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_00x01"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/ib_00_02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_00x02"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/ib_01_00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_01x00"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/ib_01_01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_01x01"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/ib_01_02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_01x02"
            android:scaleType="fitXY"
            android:padding="0dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/ib_02_00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_02x00"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/ib_02_01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_02x01"
            android:scaleType="fitXY"
            android:padding="0dp"
            />
        <ImageButton
            android:id="@+id/ib_02_02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_xiaoxiong_02x02"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:visibility="invisible"
            />
    </LinearLayout>
    
    <Button 
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_gravity="center_horizontal"
        android:text="重新开始"
        />

    <ImageView
        android:id="@+id/iv_yuantu"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_gravity="center_horizontal"
        android:src="@drawable/yangtu"
        />

</LinearLayout>