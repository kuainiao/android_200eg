<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mrkj_image_background"
    tools:context="com.mingrisoft.systemcamera.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击按钮添加图片"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/show_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:src="@mipmap/mrkj_add_image"
            android:scaleType="fitXY"/>
        <Button
            android:id="@+id/button"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_slector_background"
            android:textSize="20sp"
            android:textColor="#737dcf"
            android:text="添加图片"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
