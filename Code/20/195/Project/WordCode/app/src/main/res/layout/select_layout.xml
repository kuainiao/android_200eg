<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:columnCount="3"
    android:rowCount="3"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">
    <TextView
        android:layout_columnSpan="3"
        android:textColor="#000000"
        android:textSize="12sp"
        android:text="点击以下文字输入验证码"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        tools:text="一"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        tools:text="二"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        tools:text="三"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_4"
        android:layout_width="60dp"
        android:textSize="20sp"
        android:layout_height="60dp"
        tools:text="四"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_5"
        android:layout_width="60dp"
        android:textSize="20sp"
        android:layout_height="60dp"
        tools:text="五"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_6"
        android:layout_width="60dp"
        android:textSize="20sp"
        android:layout_height="60dp"
        tools:text="六"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        tools:text="七"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_8"
        android:layout_width="60dp"
        android:textSize="20sp"
        android:layout_height="60dp"
        tools:text="八"/>
    <com.mingrisoft.wordcode.view.SelectWordBtn
        android:id="@+id/code_9"
        android:layout_width="60dp"
        android:textSize="20sp"
        android:layout_height="60dp"
        tools:text="九"/>
</GridLayout>