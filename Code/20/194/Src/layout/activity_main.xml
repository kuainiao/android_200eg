<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mingrisoft.pinyinhintcode.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请问下迅雷赚钱宝的验证码怎么输入"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.haley.checkcodeview.CheckCodeEditText
            android:id="@+id/input_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/clear_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="清空"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/input_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入一fan丰顺。提示fan=帆"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/validation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>
</LinearLayout>
