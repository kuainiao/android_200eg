<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 控制器上部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#77000000"
        android:gravity="center_vertical">
        <!-- 返回键 -->
        <ImageButton
            android:id="@+id/mediacontroller_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/mediacontroller_button"
            android:src="@mipmap/mine_back" />
        <!-- 视频名称 -->
        <TextView
            android:id="@+id/mediacontroller_file_name"
            style="@style/MediaController_Text"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            tools:text="视屏名称" />
        <CheckBox
            android:id="@+id/mediacontroller_barrage_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/barrage_selector"/>
        <!-- 显示时间 -->
        <TextView
            android:id="@+id/mediacontroller_time"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/default_time"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>