<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorBar"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
       <ImageView
           android:id="@+id/music_author"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_centerVertical="true"
           tools:src="@mipmap/ic_launcher"
           android:scaleType="fitXY"
           android:background="@color/colorWhite"
           android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/music_author">
            <TextView
                android:id="@+id/music_name"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="歌曲的名称"
                android:textSize="18sp"
                android:gravity="bottom"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/colorYellow"/>
            <TextView
                android:id="@+id/music_singer"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="歌手的名字"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="top"
                android:textColor="@color/colorYellow"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/play_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:background="@mipmap/next"
            android:scaleType="centerInside"
            android:layout_marginLeft="5dp"/>
        <CheckBox
            android:id="@+id/play_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/play_next"
            android:button="@null"
            android:background="@drawable/play_switch"
            android:layout_marginLeft="5dp"/>
        <CheckBox
            android:id="@+id/play_lrc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/play_switch"
            android:button="@null"
            android:background="@mipmap/lrc"/>
    </RelativeLayout>
</LinearLayout>